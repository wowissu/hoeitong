{% verbatim %}
<div class="company_wraper">
    <pagebox
        id="company"
        class="company_pagebox"
        :menu="menu"
        :navbar="navbar"
    >
        <template slot="logo">
            <router-link to="/company" class="colorinherit">
                <i class="fa fa-briefcase"></i>
            </router-link>
        </template>
        <template slot="section">
            <div class="company_section">
                <div class="company_navheader">
                    <div class="navheader_inner">
                        <div class="searchbar">
                            <input type="text" id="search_input" placeholder="搜尋..." v-model="table.filterby">
                            <label for="search_input">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="company_body pagebox_section_scroll">
                    <table class="companies_table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>公司名稱</th>
                                <th>負責人</th>
                                <th>電話</th>
                                <th>聯絡人</th>
                                <th>地址</th>
                                <th class="row_toolbar">
                                    <i class="fa fa-wrench" aria-hidden="true"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="company in filterCompanies(companies)">
                                <td>
                                    <div class="row_toolbar">
                                        <span class="row_tool editor">
                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <span class="row_title" v-text="company.title"></span>
                                </td>
                                <td>
                                    <div class="row_owner" v-text="company.owner"></div>
                                </td>
                                <td>
                                    <ul class="row_phones">
                                       <li v-for="phone in company.phones">
                                            <span v-if="phone.type == 0"><i class="fa fa-phone" aria-hidden="true"></i></span>
                                            <span v-else><i class="fa fa-fax" aria-hidden="true"></i></span>
                                            <span v-text="phone.phone"></span>
                                       </li>
                                    </ul>
                                </td>
                                <td>
                                    <ul class="row_phones">
                                       <li v-for="phone in company.phones" v-show="phone.contactor">
                                            <span><i class="fa fa-user" aria-hidden="true"></i></span>
                                            <span v-text="phone.contactor"></span>
                                       </li>
                                    </ul>
                                </td>
                                <td>
                                    <div class="row_address" v-text="company.address"></div>
                                </td>
                                <td>
                                    <div class="row_toolbar">
                                        <span class="row_tool trash">
                                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </template>
    </pagebox>
</div>
{% endverbatim %}